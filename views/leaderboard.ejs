<!DOCTYPE html>
<html lang = "ja">
    <head>
        <meta charset = "utf-8">
        <title>LeaderBoard</title>
        <%- include("link") %>
        <link rel = "stylesheet" href = "/css/leaderboard.css">
    </head>
    <body>
        <%- include("header") %>
        <img src = "/image/banner.gif" class = "banner">
        <div class = "main">
            <ul class = "selection-mode">
                <li class = "std">
                    <div class = "std-text">
                        <a href = "/leaderboard/mode=0/relax=<%= flag; %>"><img src = "/image/mode-osu.png">Standard</a>
                    </div>
                </li>
                <li class = "taiko">
                    <div class = "taiko-text">
                        <a href = "/leaderboard/mode=1/relax=<%= flag; %>"><img src = "/image/mode-taiko.png">Taiko</a>
                    </div>
                </li>
                <li class = "catch">
                    <div class = "catch-text">
                        <a href = "/leaderboard/mode=2/relax=<%= flag; %>"><img src = "/image/mode-fruits.png">Catch</a>
                    </div>
                </li>
                <li class = "mania">
                    <div class = "mania-text">
                        <a href = "/leaderboard/mode=3/relax=<%= flag; %>"><img src = "/image/mode-mania.png">Mania</a>
                    </div>
                </li>
            </ul>
            <ul class = "selection-relax">
                <li class = "classic">
                    <div class = "classic-text">
                        <a href = "/leaderboard/mode=<%= mode; %>/relax=0">Classic</a>
                    </div>
                </li>
                <li class = "relax">
                    <div class = "relax-text">
                        <a href = "/leaderboard/mode=<%= mode; %>/relax=1">Relax</a>
                    </div>
                </li>
            </ul>
            <div class = "ranking-table">
                <div class = table-title>
                    <span class = "ranking-null"></span>
                    <span class = "country-null"></span>
                    <span class = "name-null"></span>
                    <span class = "acc-title">Accuracy</span>
                    <span class = "playcount-title">Play Count</span>
                    <span class = "pp-title">Performance</span>
                    <span class = "ss-title">SS</span>
                    <span class = "s-title">S</span>
                    <span class = "a-title">A</span>
                </div>
                <% rankings.forEach((ranking) => { %>
                    <div class = "ranking-data">
                        <span class = "ranking">#<%= ranking.ranking; %></span>
                        <span class = "flag-icon flag-icon-<%= ranking.country; %>"></span>
                        <span class = "name"><%= ranking.name; %></span>
                        <span class = "acc"><%= ranking.acc.toFixed(2); %>%</span>
                        <span class = "playcount"><%= ranking.plays.toLocaleString(); %></span>
                        <span class = "pp"><%= ranking.pp.toLocaleString(); %></span>
                        <span class = "ss"><%= ranking.SS.toLocaleString(); %></span>
                        <span class = "s"><%= ranking.S.toLocaleString(); %></span>
                        <span class = "a"><%= ranking.A.toLocaleString(); %></span>
                    </div>
                <% }); %>
            </div>
        </div>
    </body>
</html>